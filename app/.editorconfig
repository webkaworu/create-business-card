root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = tab
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{scss,css}]
indent_style = space
indent_size = 4

[*.{yml,yaml}]
indent_size = 2

[docker-compose.yml]
indent_size = 4
